<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="6dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_program_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Module Name"
            android:textSize="25sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/view"
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:background="@color/colorBlack"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tv_program_name"></View>


        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/view"
            android:src="@drawable/baseline_group_24">
        </ImageView>

        <TextView
            android:id="@+id/tv_created_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/tv_program_name"
            android:textStyle="bold"
            android:text="Pre-Assessment" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tv_created_on"
            android:src="@drawable/baseline_group_24">
        </ImageView>

        <TextView
            android:id="@+id/tv_total_part"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="30dp"
            android:text="Post Assessment"
            android:layout_below="@+id/tv_created_on"
            android:textSize="15sp"
            android:textStyle="bold" />


        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tv_total_part"
            android:src="@drawable/baseline_group_24">
        </ImageView>

        <TextView
            android:id="@+id/tv_total_part_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:layout_marginStart="30dp"
            android:textStyle="bold"
            android:layout_below="@+id/tv_total_part"
            android:text="Tranning Learning Resource"
            />


    </RelativeLayout>

</androidx.cardview.widget.CardView>
